<h1>Register</h1>

<%= form_for @user, html: {id: "registration_form"} do |f| %>

  <div class = "row">
    <div class = "medium-3 columns">
      <%= f.label :username %>
      <%= f.text_field :username %>

  <div class = "row">
    <div class = "medium-3 columns">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
  </div>

  <div class = "row">
    <div class = "medium-3 columns">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
  </div>

  <div class='medium-3 columns'>
    <%= f.submit "register", {class: "button"} %>
  </div>

</div>

<% end %>
