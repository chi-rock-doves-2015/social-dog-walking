<div class='row'>
  <div class='small-9 small-centered columns'>
  <% if session[:walk_id] %>
    <a id="continue-walk-button" class = "button small expand radius success " href="<%= walk_path(session[:walk_id]) %>"> Walking</a>
  <% else %>
      <form action = "/users/<%=@user.id%>/walks" method = "post">
        <% if @user.dogs %>
          <% @user.dogs.each do |dog| %>
            <input type = "hidden" name="dogs[<%=dog.id%>]" value='<%=dog.id%>'></input>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <% end %>
        <% end %>
            <input class = "button small expand radius success " type = "submit" value = "Take A Walk!"></input>
        </div>
      </form>
  <% end %>
  </div>
</div>
